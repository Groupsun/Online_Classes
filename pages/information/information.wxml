<!--page/one/index.wxml-->
<view class="page">
    <view class="page-bottom">
        <view class="page-content">
            <view bindtap="student_index" class="wc">
                <text>主页</text>
            </view>
            <view bindtap="courser_list" class="wc">
                <text>课程列表</text>
            </view>
            <view  class="wc">
                <text>个人信息</text>
            </view>
            <view  class="wc">
                <text>关于</text>
            </view>
        </view>
    </view>
    <view class="page-top {{open ? 'c-state1' : ''}}">
        <image class="page-top-image" bindtap="tap_ch" src="../../images/btn.png"></image>
        <view class="index_container">
            <text>个人信息</text>
            <view class="information">
                <view class="information-text">
                    <text>学号\n</text>
                    <text>{{stu_id}}</text>
                </view>
                <view class="information-text"> 
                    <text>姓名\n</text>
                    <text>{{stu_name}}</text>
                </view>
                <view class="information-text">
                    <text>出生日期\n</text>
                    <text>{{stu_birth}}</text>
                </view>
                <view class="information-text">
                    <text>性别\n</text>
                    <text>{{stu_sex}}</text>
                </view>
            </view>
        </view>
    </view>
</view>
